<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Myphonedetails.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar.AppWidgetContainer"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/app_widget_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/app_widget_name"
        android:textAlignment="center"
        android:textColor="@color/main_font"
        android:textSize="17sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_widget_name"
        android:layout_alignStart="@+id/app_widget_name"
        android:layout_alignEnd="@+id/app_widget_name"
        android:textAlignment="center"
        android:text="@string/appInformation_maintext"
        android:textColor="@color/main_font"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginVertical="60dp"
        android:layout_below="@+id/app_widget_name"
        android:layout_alignStart="@+id/app_widget_name"
        android:textColor="@color/main_font"
        android:layout_alignEnd="@+id/app_widget_name"
        android:textAlignment="center"
        android:text="@string/WIDGET_MAIN_TEXT"
        android:textSize="10sp"
        android:scrollbars="vertical"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/openOnGH"
        android:layout_width="300dp"
        style="@style/socials_button"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_widget_name"
        android:layout_alignStart="@+id/app_widget_name"
        android:layout_alignEnd="@+id/app_widget_name"
        android:layout_marginTop="150dp"
        android:text="@string/openOnGH"
        android:textAlignment="center"
        android:textSize="10sp"
        tools:ignore="SmallSp" />
</RelativeLayout>